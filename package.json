{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Antara",
  "license": "ISC",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "echo 'running tests...' && yarn test:quiet && echo 'lint checking...' && yarn run-lint"
    }
  },
  "lint-staged": {
    "*.{js,css,scss}": [
      "yarn format",
      "yarn lint:fix",
      "git add"
    ]
  },
  "scripts": {
    "test": "node --inspect=0.0.0.0:6858 node_modules/jest/bin/jest.js",
    "build": "mkdir dist && babel ./ -s -d dist",
    "start:prod": "./dist/bin/www",
    "start": "nodemon ./bin/dev",
    "format": "prettier \"**/*.{js,css}\" --write",
    "lint": "eslint .",
    "lint:fix": "eslint --fix ."
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "babelify": "^10.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "prettier": "^2.0.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "convict": "^6.2.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.25.3",
    "fastify-autoload": "^3.9.0",
    "fastify-blipp": "^3.1.0",
    "fastify-cors": "^6.0.2",
    "fastify-helmet": "^5.3.2",
    "fastify-http-proxy": "^6.2.1",
    "fastify-no-icon": "^4.0.0",
    "fastify-plugin": "^3.0.0",
    "fastify-swagger": "^4.13.0",
    "jsonwebtoken": "^8.5.1",
    "make-promises-safe": "^5.1.0",
    "middie": "^5.4.0",
    "nodemon": "^2.0.3",
    "pg": "^8.1.0",
    "qs": "^6.9.1",
    "raven": "^2.6.4",
    "sequelize": "^6.12.5",
    "sequelize-cli": "^6.3.0",
    "winston": "^3.2.1"
  }
}
